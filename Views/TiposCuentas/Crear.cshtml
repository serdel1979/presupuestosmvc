@model TipoCuenta
@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}



<div class="card">

    <div class="card-body">

        <h5 class="card-title">Tipo de cuenta</h5>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <form asp-action="Crear">

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input type="text" asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Orden" class="form-label">Orden</label>
                <input type="number" asp-for="Orden" class="form-control" />
                <span asp-validation-for="Orden" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
</div>


@section Scripts{
      <partial name="_ValidationScriptsPartial" />
}